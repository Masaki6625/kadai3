<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1, maximum-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <nav class = "navbar navbar-expand-lg navbar-dark bg-dark">
        <div class = "container">
          <a class = "navbar-brand " href="/"> <%= link_to "Bookers" , root_path, class:"btn btn-dark" %></a>
          <button class ="navbar-toggler" type="button" data-toggle="collapse" data-traget="#navbarNavDropdown" aria-controls = "navbarNavDropdown" aria-expanded= "false" aria-lable="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class = "collapse navbar-collapse" id="navbarNavDropdown">
            <ul class ="navbar-nav ml-auto">
          <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to  user_path(current_user.id), class:"btn btn-dark" do%>
              <i class="fas fa-home"></i>home
              <%end%>
            </li>
            <li>
              <%= link_to  users_path, class:"btn btn-dark" do %>
              <i class="fas fa-users"></i>Users
              <%end%>
            </li>
            <li>
              <%= link_to books_path, class:"btn btn-dark" do %>
              <i class="fas fa-book"></i>Books
              <%end%>
            </li>
            <li>
              <%= link_to  destroy_user_session_path, method: :delete , class:"btn btn-dark" do%>
               <i class="fas fa-sign-out-alt"></i>Log_out
              <%end%>
            </li>
           <% else %>
            <li>
              <%= link_to root_path, class:"btn btn-dark" do %>
              <i class="fas fa-home"></i>Home
              <%end%>
            </li>
            <li>
             <%= link_to about_path, class:"btn btn-dark" do %>
             <i class="fas fa-link"></i>About
             <%end%>
            </li>
            <li>
              <%= link_to  new_user_registration_path, class:"btn btn-dark" do %>
              <i class="fas fa-user-plus"></i>Sign_up
              <%end%>
            </li>
             <li>
              <%= link_to  new_user_session_path, class:"btn btn-dark" do %>
              <i class="fas fa-sign-in-alt"></i>Log_in
              <%end%>
            <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main>
          <%= yield %>
    </main>
    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>Copylight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
