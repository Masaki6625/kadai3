<div>
  <%= flash[:notice] %>
</div>

<%= render 'books/userinfo', book: @book , user: @user %>


<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>    </th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
<% @books.each do |book| %>
  <tbody>
  <td><%= image_tag book.user.get_profile_image(100,100) %></td>

  <td><%= link_to book_path(book.id) do %>
  <%= book.title %>
  <% end %>
  </td>
  <td><%= book.body %></td>
  </tr>
  </tbody>
<% end %>
</table>