<%= render 'userinfo', book: @book , user: @user %>

<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
      <th>   </th>
    </tr>
  </thead>
<% @books.each do |book| %>
  <tbody class="center">
    <tr></tr>
  <td><%= link_to user_path(book.user.id) do %>
  <%= image_tag book.user.get_profile_image(100,100) %>
  <%end%>
  </td>
  <td><%= link_to book_path(book.id) do %>
  <%= book.title %>
  <% end %>
  </td>
  <td><%= book.body %></td>
  </tbody>


<% end %>
</table>